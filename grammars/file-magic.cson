name: "File Magic"
scopeName: "text.file-magic"
fileTypes: [
	"apache2/magic"
	"magic/Header"
	"magic/Localstuff"
]
patterns: [include: "#main"]

repository:
	main:
		patterns: [
			{include: "#comment"}
		]
	
	
	# Comment lines
	comment:
		name: "comment.line.number-sign.file-magic"
		begin: "#"
		end:   "$"
		beginCaptures: "punctuation.definition.comment.file-magic"
